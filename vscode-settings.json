{
    "editor.fontFamily": "'Fira code', 'Ubuntu Mono', 'Droid Sans Mono', 'Courier New', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 15,
    "files.autoSave": "onFocusChange",
